pico-8 cartridge // http://www.pico-8.com
version 29
__lua__
function _init()
	playerx = 50
	playery = 50
	playerleft = false
	playerspeed = 3
end
function _update()
	if btn(⬆️) then
		playery -= playerspeed
	elseif btn(⬇️)then
		playery += playerspeed
	end
	if btn(⬅️) then
		playerx -= playerspeed
	elseif btn(➡️) then
		playerx += playerspeed
	end
end
function _draw()
	cls()
	map()
	drawplayer()
end

function drawplayer()
	spr(1,playerx,playery,1,1,playerleft)
end
